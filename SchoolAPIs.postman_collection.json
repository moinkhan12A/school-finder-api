{
  "info": {
    "name": "School Finder API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Add School",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Example School\",\n  \"address\": \"123 Test St, Test City\",\n  \"latitude\": 22.7196,\n  \"longitude\": 75.8577\n}"
        },
        "url": {
          "raw": "https://school-finder-api-nf8s.onrender.com/addSchool",
          "protocol": "https",
          "host": ["school-finder-api-nf8s", "onrender", "com"],
          "path": ["addSchool"]
        }
      },
      "response": []
    },
    {
      "name": "List Schools",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://school-finder-api-nf8s.onrender.com/listSchools?lat=22.7196&lng=75.8577",
          "protocol": "https",
          "host": ["school-finder-api-nf8s", "onrender", "com"],
          "path": ["listSchools"],
          "query": [
            { "key": "lat", "value": "22.7196" },
            { "key": "lng", "value": "75.8577" }
          ]
        }
      },
      "response": []
    }
  ]
}

